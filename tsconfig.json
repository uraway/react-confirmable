{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "rootDir": "src",
    "jsx": "react-jsx",
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
